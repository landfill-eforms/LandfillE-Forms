<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/backgroundTheme">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:background="@color/backgroundTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inspector_title"
            android:textColor="@color/textLabelColor"
            />

        <TextView
            android:id="@+id/warmspot_inspector_name"
            android:background="@color/backgroundTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:background="@color/backgroundTheme"
            android:layout_width="match_parent"
            android:text="@string/location_label"
            android:textColor="@color/textLabelColor"
            />

        <TextView
            android:background="@color/backgroundTheme"
            android:id="@+id/warmspot_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:background="@color/backgroundTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grid_id_label"
            android:textColor="@color/textLabelColor"
            />

        <TextView
            android:id="@+id/warmspot_grid_id"
            android:background="@color/backgroundTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:background="@color/backgroundTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/methane_reading_label"
            android:textColor="@color/textLabelColor"
            />

        <TextView
            android:id="@+id/warmspot_methane_reading"
            android:background="@color/backgroundTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:background="@color/backgroundTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_picker_title"
            android:textColor="@color/textLabelColor"
            />

        <Button
            android:id="@+id/warmspot_time_button"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="200dp"
            android:layout_gravity="center" />

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:background="@color/backgroundTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/size_input_label"
            android:textColor="@color/textLabelColor"
            />

        <EditText
            android:id="@+id/warmspot_size_field"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. 10 cm, " />

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:background="@color/backgroundTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/textLabelColor"
            />


        <EditText
            android:id="@+id/warmspot_description_field"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:inputType="text"
            android:hint="add a description. "
            android:layout_height="120dp"
            android:gravity="left" />


        <Button
            android:id="@+id/warmspot_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    </LinearLayout>
</ScrollView>

