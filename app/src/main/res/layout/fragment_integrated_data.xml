<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/backgroundTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TableRow android:paddingTop="3dp">
                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/inspector_title"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="normal|bold"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/inspector_name"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textSize="20dp"
                    />

            </TableRow>

            <TableRow>

                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:text="@string/location_label"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="normal|bold"
                    android:textSize="20dp"
                    />

                <TextView
                    android:background="@color/backgroundTheme"
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textSize="20dp"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/grid_id_label"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    />

                <Spinner
                    android:id="@+id/grid_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textSize="20dp"
                    />
            </TableRow>

            <TableRow>

                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:text="@string/current_date"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="normal|bold"
                    android:textSize="20dp"
                    />

                <!--Should display current date from system-->
                <TextView
                    android:background="@color/backgroundTheme"
                    android:id="@+id/date_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textSize="20dp"
                    />

            </TableRow>

<!--
            <TableRow android:paddingTop="5dp">

                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:text="@string/serial_no_label"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="normal|bold"
                    android:textSize="20dp"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/instrument_serial_no_spinner"
                    android:textSize="20dp"/>

            </TableRow>
-->


        <TableRow>
            <TextView
                style="?android:listSeparatorTextViewStyle"
                android:background="@color/backgroundTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instrument: "
                android:textColor="@color/white"
                android:layout_margin="3dp"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                android:textSize="20dp"
                />
            <!--TODO: Maybe make this a spinner so they can switch it to an existing IME? Or create a new one. In any case, the user shouldn't be an EditText.-->
            <Spinner
                android:id="@+id/integrated_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"

                />
        </TableRow>
            <!--android:id="@+id/instrumentTextViewTest"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="@color/white"-->
            <!--android:layout_margin="3dp"-->
            <!--android:textAllCaps="false"-->
            <!--android:textStyle="normal"-->
            <!--android:textSize="20dp"-->
            <!--/>-->





            <TableRow>

                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_id_label"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    />


                <TextView
                    android:id="@+id/sample_id_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    />


            </TableRow>

            <TableRow>

                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bag_number_label"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    />

                <EditText
                    android:id="@+id/bag_number_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/darker_gray"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    />

            </TableRow>

            <TableRow>

                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/baro_reading_label"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/baro_reading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textSize="20dp"
                    />


            </TableRow>

            <TableRow>
                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:text="Start Time: "
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="normal|bold"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/darkThemeButtonBackground"
                    android:textColor="@color/white"
                    android:textStyle="normal|bold"
                    android:layout_marginBottom="5dp" />

            </TableRow>

            <TableRow>

                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:text="End Time: "
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="normal|bold"
                    android:textSize="20dp"
                    />

                <Button
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/darkThemeButtonBackground"
                    android:textStyle="normal|bold"
                    android:textColor="@color/white"/>


            </TableRow>

            <!--Spinner for Equipment List-->


            <!--            <TableRow>

                            <TextView
                                style="?android:listSeparatorTextViewStyle"
                                android:background="@color/backgroundTheme"
                                android:layout_width="match_parent"
                                android:text="@string/equipment_type_label"
                                android:layout_margin="3dp"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:textStyle="normal|bold"
                                android:textSize="20dp"
                                />

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/equipment_spinner"
                                android:textSize="20dp"/>


                        </TableRow>-->

            <!--Spinner for Serial No List-->



        </TableLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">



            <TableRow>

                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/methane_reading_label"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    />

                <EditText
                    android:id="@+id/methane_reading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/darker_gray"
                    android:inputType="numberDecimal"
                    android:hint="                     "
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    />

            </TableRow>

            <TableRow>

                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:background="@color/backgroundTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volume_reading_label"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    />

                <EditText
                    android:id="@+id/volume_reading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/darker_gray"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    />

            </TableRow>






        </TableLayout>


        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/darkThemeButtonBackground"
            android:textStyle="normal|bold"
            android:textColor="@color/white"/>
    </LinearLayout>
</ScrollView>
